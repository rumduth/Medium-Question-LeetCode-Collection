/**
 * @param {string} word1
 * @param {string} word2
 * @return {number}
 */
var minDistance = function(word1, word2) {
    let m = word1.length;
    let n = word2.length;
    let dp = Array.from({length: m + 1}, () => new Array(n+1).fill(0));
    for(let col = 1; col <= n; col++) dp[0][col] = col;
    for(let row = 1; row <= m; row++) dp[row][0] = row;
    for(let i = 1; i <= m; i++){
        for(let j = 1; j <= n; j++){
            if(word1[i-1] === word2[j-1])
                dp[i][j] = dp[i-1][j-1];
            else{
                //delete
                let del = dp[i-1][j];
                //replace
                let rep = dp[i-1][j-1];
                //insert
                let ins = dp[i][j-1];
                dp[i][j] = 1 + Math.min(del,rep,ins);
            }
        }
    }
    return dp[m][n];
    
};
